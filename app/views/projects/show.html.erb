<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @project.main_image %>
    </div>
    <div class="col-md-5">
      <h1><%= @project.title %></h1>
      <hr>
      <em><%= @project.subtitle %></em>
      <p><%= @project.body %></p>
      <hr>
      <h3>Technologies used:</h3>
      <% @project.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>





