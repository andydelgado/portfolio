<div class="container project-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag project_img(@project.main_image, 'main'), width: '100%' %>
    </div>
    <div class="col-md-5">
      <h1><%= @project.title %></h1>
      <hr>
      <em><%= @project.subtitle %></em>
      <p><%= @project.body %></p>
      <hr>
      <h3>Technologies used:</h3>
      <% @project.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>

      <% if logged_in?(:site_admin) %>
        <div class="col-md-12">
          <%= link_to "Edit", edit_project_path, class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>





